{
  "name": "worker",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/worker/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "outputPath": "dist/packages/worker",
        "main": "packages/worker/src/index.ts",
        "tsConfig": "packages/worker/tsconfig.lib.json",
        "assets": [
        ]
      },
      "dependsOn": [
        "^build"
      ]
    },
    "publish": {
      "command": "ts-node tools/publish.ts worker {args.ver} {args.tag}",
      "dependsOn": [
        "build"
      ]
    },



    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/worker/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/worker/jest.config.ts",
        "passWithNoTests": true,
        "codeCoverage": true
      }
    },



    "bump-beta": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node tools/bump-beta-version.ts worker"
      }
    },
    "build-dev": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "outputPath": "dist/packages/worker",
        "main": "packages/worker/src/index.ts",
        "tsConfig": "packages/worker/tsconfig.lib.json",
        "assets": [
        ]
      },
      "dependsOn": [
        "bump-beta",
        "^publish-local"
      ]
    },
    "publish-local": {
      "command": "ts-node tools/publish-local.ts worker",
      "dependsOn": [
        "build-dev"
      ]
    }
  },
  "tags": []
}
